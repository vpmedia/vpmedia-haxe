package hu.vpmedia.entity.commons;

/**
 * @author Andras Csizmadia
 * @version 1.0
 */
class AlignTypes {
/**
 * Specifies that alignment is at the bottom.
 */
    public static inline var BOTTOM:String = "B";
/**
 * Specifies that alignment is in the bottom-left corner.
 */
    public static inline var BOTTOM_LEFT:String = "BL";
/**
 * Specifies that alignment is in the bottom-right corner.
 */
    public static inline var BOTTOM_RIGHT:String = "BR";
/**
 * Specifies that alignment is on the left.
 */
    public static inline var LEFT:String = "L";
/**
 * Specifies that alignment is in the middle
 */
    public static inline var MIDDLE:String = "C";
/**
 * Specifies that alignment is on the right.
 */
    public static inline var RIGHT:String = "R";
/**
 * Specifies that alignment is at the top.
 */
    public static inline var TOP:String = "T";
/**
 * Specifies that alignment is in the top-left corner.
 */
    public static inline var TOP_LEFT:String = "TL";
/**
 * Specifies that alignment is in the top-right corner.
 */
    public static inline var TOP_RIGHT:String = "TR";
}